<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col">
                        <h5 class="card-title mb-0">Department Management</h5>
                    </div>
                    <div class="col-auto ms-auto text-end mt-n1">
                        <a href="/departments/add" class="btn btn-primary">New Department</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                {{#if departments.length}}
                <table class="table">
                    <thead>
                        <tr>
                            <th class="text-center">Name</th>
                            <th class="text-center">Short Name</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each departments}}
                        <tr>
                            <td class="text-center">{{name}}</td>
                            <td class="text-center">{{short_name}}</td>
                            <td class="text-center">
                                <a href="/departments/edit/{{id}}" class="btn btn-md btn-primary"><i class="fa-regular fa-pen-to-square"></i></a>
                                <a href="/departments/delete/{{id}}" class="btn btn-md btn-danger"><i class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{else}}
                <div class="alert alert-info">
                    You do not have access to edit any departments
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>